procedure CosecharPlanta() {
  SacarN(cantidadTomates(), Rojo)
}

function cantidadTomates() {
  return (nroBolitas(Rojo))
}

procedure MoverN(cantidad, direccion) {
  repeat(cantidad) {
    Mover(direccion)
  }
}

procedure SacarN(cantidad, color) {
  repeat(cantidad) {
    Sacar(color)
  }
}

procedure PonerN(cantidad, color) {
  repeat(cantidad) {
    Poner(color)
  }
}